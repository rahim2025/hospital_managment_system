<h1>Insert Rooms</h1>

<!-- Insert form for Cabins -->
<form action="/insert-cabin" method="post">
    <label for="room_no_cabin">Room No:</label>
    <input type="text" id="room_no_cabin" name="room_no" required>
    <label for="patient_id_cabin">Patient ID:</label>
    <input type="text" id="patient_id_cabin" name="patient_id" required>
    <label for="doctor_id_cabin">Doctor ID:</label>
    <input type="text" id="doctor_id_cabin" name="doctor_id" required>
    <label for="cost_cabin">Cost:</label>
    <input type="text" id="cost_cabin" name="cost" required>
    <label for="admit_date_cabin">Admit Date:</label>
    <input type="text" id="admit_date_cabin" name="admit_date" required>
    <button type="submit">Insert Cabin</button>
</form>

