<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Rooms</title>
    <link rel="stylesheet" href="doctor_table.css">
</head>
<body>

<h1>All Rooms</h1>

<!-- Display Cabins -->
<h2>Cabins</h2>
<table>
    <tr>
        <th>Room No</th>
        <th>Patient ID</th>
        <th>Doctor ID</th>
        <th>Cost</th>
        <th>Admit Date</th>
    </tr>
    <% result1.forEach(cabin => { %>
        <tr>
            <td><%= cabin.room_no %></td>
            <td><%= cabin.patient_id %></td>
            <td><%= cabin.doctor_id %></td>
            <td><%= cabin.cost %></td>
            <td><%= cabin.admit_date %></td>
        </tr>
    <% }); %>
</table>

<!-- Display ICU -->
<h2>ICU</h2>
